{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",  // Change to CommonJS if using ts-node
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
